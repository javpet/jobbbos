<section class="form">
  <%= simple_form_for [@category, Listing.new] do |f| %>

    <% if Listing.new.errors.any? %>
      <div class="errors">
        <% Listing.new.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </div>
    <% end %>

    <h2>New <span class="bold"><%= @category.title %></span> job listing</h2>
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>

    <span class="hint">
      Keep it in max 20 characters
    </span>

    <%= f.input :body , label: "Description", :required => true %>

    <%= f.button :submit, "Create â˜»", class:"btn-primary" %>
  <% end %>
</section>
